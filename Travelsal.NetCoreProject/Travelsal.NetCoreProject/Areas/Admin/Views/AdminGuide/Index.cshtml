@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Tur Rehberleri</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        { count += 1; }
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" class="rounded-circle" height="100" width="100" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @{
                if(item.Status==true)
                {
                    <td><a href="/Admin/AdminGuide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning">Pasif Yap</a></td>
                }
                else
                {
                    <td><a href="/Admin/AdminGuide/ChangeToTrue/@item.GuideID" class="btn btn-outline-secondary">Aktif Yap</a></td>
                }
            }
            <td><a href="/Admin/AdminGuide/UpdateGuide/@item.GuideID" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/Admin/AdminGuide/AddGuide/" class="btn btn-outline-primary">Yeni Tur Rehberi Ekle</a>