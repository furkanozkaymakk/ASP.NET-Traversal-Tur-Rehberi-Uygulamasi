@using DTOLayer.DTOs.GuideDTOs;
@model GuideViewDto
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Ekleme Sayfası</h1>

<form method="post" class="form-control" enctype="multipart/form-data">
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input class="form-control" type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        @Html.Label("Rehber Fotoğraf")
        <input class="form-control" type="file" asp-for="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        @Html.Label("Twitter Adresi")
        <input class="form-control" type="text" asp-for="TwitterUrl" />
    </div>

    <div class="form-group">
        @Html.Label("Instagram Adresi")
        <input class="form-control" type="text" asp-for="InstagramUrl" />
    </div>

    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <button class="btn btn-outline-primary">
        Rehber Ekle
    </button>

</form>
