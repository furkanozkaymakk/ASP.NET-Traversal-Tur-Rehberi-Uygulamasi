@using DTOLayer.DTOs.GuideDTOs;
@model GuideViewDto
@{
    ViewData["Title"] = "UpdateGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Rehber Güncelleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.ID)
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input class="form-control" type="text" asp-for="Name" />
    </div>

    <div class="form-group">
        @Html.Label("Rehber Fotoğraf")
        <input class="form-control"  type="file" asp-for="Image" />
    </div>

    <div class="form-group">
        @Html.Label("Twitter Adresi")
        <input class="form-control" type="text" asp-for="TwitterUrl" />
    </div>

    <div class="form-group">
        @Html.Label("Instagram Adresi")
        <input class="form-control" type="text" asp-for="InstagramUrl" />
    </div>

    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
    </div>
    <br />
    <button class="btn btn-outline-primary">
        Güncelle
    </button>

</form>
