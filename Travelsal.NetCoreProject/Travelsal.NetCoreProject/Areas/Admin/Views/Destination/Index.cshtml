@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>ŞEHİR</th>
        <th>FİYAT</th>
        <th>KAPASİTE</th>
        <th>SİTEDE GÖR</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.City</td>
            <td>@item.Price</td>
            <td>@item.Capacity</td>
            <td><a href="/Destination/DestinationDetails/@item.DestinationID/" class="btn btn-outline-info">Sitede Gör</a></td>
            <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
    }
</table>
<a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası Ekle</a>