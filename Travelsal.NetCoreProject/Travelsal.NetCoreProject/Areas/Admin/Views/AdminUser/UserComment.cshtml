@model List<Comment>
@{
    ViewData["Title"] = "UserComment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewBag.personName adlı kullanıcının yorumları</h1>
@if (Model.Count == 0)
{
    <h3>Kullanıcının Herhangi bir Yorumu Bulunmuyor</h3>
}
else
{

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rota</th>
            <th>Yorum</th>
            <th>Tarih</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CommentID</td>
                <td>@item.Destination.City</td>
                <td>@item.CommentContent</td>
                <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                <td><a href="/Admin/AdminUser/UpdateUserComment/@item.CommentID" class="btn btn-info">Düzenle</a></td>
                <td><a href="/Admin/AdminUser/DeleteUserComment/@item.CommentID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
}
