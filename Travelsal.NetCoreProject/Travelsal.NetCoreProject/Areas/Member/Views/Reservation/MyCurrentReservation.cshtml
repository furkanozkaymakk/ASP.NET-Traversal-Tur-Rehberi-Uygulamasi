@model List<Reservation>
@{
    ViewData["Title"] = "MyCurrentReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1 style="text-align:center">Güncel Rezervasyonlarım</h1>

@if(Model.Count()!=0)
{
    <table class="table table-bordered" style="border:2px solid black;border-collapse: collapse;">
        <tr>
            <th>Kişi Sayısı</th>
            <th>Lokasyon</th>
            <th>Tarih</th>
            <th>Açıklama</th>
            <th>Durum</th>
        </tr>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.PersonCount</td>
                    <td>@item.Destination.City</td>
                    <td>@item.ReservationDate</td>
                    <td>@item.Desription</td>
                    <td>@item.Status</td>
                </tr>
        }
    </table>
}
else
{
    <h2>Güncel Rezervasyonunuz Bulunmamaktadır.</h2>
}
