@using EntityLayer.Entity
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<table class="table table-bordered" style="border:2px solid black;border-collapse: collapse;"> 
    <tr>
        <th>DestinationID</th>
        <th>City</th>
        <th>Day Night</th>
        <th>Price</th>
        <th>Description</th>  
        <th>Capacity</th>  
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.DestinationID</td>
        <td>@item.City</td>
        <td>@item.DayNight</td>
        <td>@item.Price</td>
        <td>@item.Description</td>
        <td>@item.Capacity</td>
    </tr>
    }
    
</table>
